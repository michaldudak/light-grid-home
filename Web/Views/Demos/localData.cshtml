<script>
	function localDataGridController($scope, sampleModel, lgLocalDataProviderFactory) {
		$scope.dataProvider = lgLocalDataProviderFactory.create(sampleModel);
	};
</script>

<h2>Grid with a local data provider</h2>

<div ng-controller="localDataGridController" ng-non-bindable>
	<table lg-grid id="sampleGrid" class="table table-striped" model="dataProvider.getGridModel()">
		<tbody>
			<tr lg-column-templates>
				<td lg-column title="'Make'">{{ rowData.make }}</td>
				<td lg-column title="'Model'">{{ rowData.model }}</td>
				<td lg-column title="'Engine'">{{ rowData.engine }}</td>
			</tr>
		</tbody>
	</table>
</div>

