<script>
	function localDataGridController($scope, sampleModel, lgLocalDataProviderFactory) {
		$scope.dataProvider = lgLocalDataProviderFactory.create(sampleModel);
	};
</script>

<h2>Grid with a local data provider</h2>

<div ng-controller="localDataGridController" ng-non-bindable>
	<table lg-grid class="table table-striped" model="dataProvider.getGridModel()">
		<thead>
			<tr>
				<th>Make</th>
				<th>Model</th>
				<th>Engine</th>
			</tr>
		</thead>
		<tbody>
			<tr lg-row>
				<td>{{ row.data.make }}</td>
				<td>{{ row.data.model }}</td>
				<td>{{ row.data.engine }}</td>
			</tr>
		</tbody>
	</table>
</div>

<source-display></source-display>
